{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "exclude": [
    "scripts/**/*",
    "supabase/**/*",
    "utils/biometricDebugExtended.ts",
    "temp/**/*",
    "docs/**/*",
    "check-*.js",
    "test-*.js",
    "create-*.sql",
    "screens/**/*",
    // Exclude server-only Next handlers and tests
    "lib/api/**/*",
    "lib/api/**",
    "lib/api/__tests__/**/*",
    // Exclude demo and platform-specific heavy components
    "components/settings/**/*",
    "components/ui/LoadingExamples.tsx",
    "components/whatsapp/**/*",
    // Exclude optional services with platform type variance
    "lib/NotificationService.ts",
    "lib/SoundAlertService.ts",
    // Exclude DB layer helpers that arenâ€™t needed for app build typechecking now
    "lib/db/**/*",
    "lib/models/**/*",
    // Test and scratch files
    "app/test-worksheet.tsx",
    "components/ai/AllocationManagementScreen.tsx",
    "tests/**/*",
    "__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": [
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
