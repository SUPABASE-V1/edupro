      "resources": ["courses"],
      "actions": ["read"]
    },
    "enroll_in_courses": {
      "id": "enroll_in_courses",
      "name": "Enroll in Courses",
      "category": "course_access",
      "description": "Self-enroll in courses using join codes",
      "resources": ["enrollments"],
      "actions": ["create"]
    },
    "submit_assignments": {
      "id": "submit_assignments",
      "name": "Submit Assignments", 
