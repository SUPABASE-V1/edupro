      "resources": ["messages"], 
      "actions": ["create", "read"]
    },
    "view_student_progress": {
      "id": "view_student_progress",
      "name": "View Student Progress",
      "category": "analytics",
      "description": "View progress and analytics for enrolled students",
      "resources": ["analytics", "progress"],
