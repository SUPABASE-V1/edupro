# =================================================================
# EduDash Pro - Environment Variables Template
# =================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git (it's in .gitignore)
# =================================================================

# -----------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# -----------------------------------------------------------------
# PayFast Payment Gateway (South Africa)
# -----------------------------------------------------------------
# Get credentials from: https://www.payfast.co.za
# Sandbox for testing: https://sandbox.payfast.co.za

PAYFAST_MERCHANT_ID=your-merchant-id
PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-secure-passphrase

# Set to 'true' for testing (uses sandbox), 'false' for production
PAYFAST_SANDBOX=true

# -----------------------------------------------------------------
# OpenAI API (for Dash AI Assistant)
# -----------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key

# -----------------------------------------------------------------
# Email Configuration (Optional - for notifications)
# -----------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-app-password

# -----------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------
# NEXT_PUBLIC_GOOGLE_ANALYTICS=G-XXXXXXXXXX
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# -----------------------------------------------------------------
# Redis (Optional - for caching and rate limiting)
# -----------------------------------------------------------------
# REDIS_URL=redis://localhost:6379
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-token

# -----------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------
NEXT_PUBLIC_ENABLE_GUEST_MODE=true
NEXT_PUBLIC_ENABLE_PAYFAST=true
NEXT_PUBLIC_ENABLE_EXAM_PREP=true

# -----------------------------------------------------------------
# Trial Configuration
# -----------------------------------------------------------------
NEXT_PUBLIC_TRIAL_DAYS=7
NEXT_PUBLIC_FREE_AI_QUERIES_PER_MONTH=10
NEXT_PUBLIC_GUEST_DAILY_LIMIT=1
