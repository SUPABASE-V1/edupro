# ============================================
# EduDash Pro Environment Configuration
# ============================================
# DO NOT PUT SECRETS HERE. This file lists required variables only.
# Copy to .env or .env.local and fill in real values. Do not commit real secrets.
# This file contains all required and optional environment variables.

# ============================================
# REQUIRED VARIABLES (App will fail without these)
# ============================================

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
EXPO_PUBLIC_API_BASE=https://your-project.supabase.co/functions/v1

# ============================================
# DEVELOPMENT CONFIGURATION (From WARP.md rules)
# ============================================

# Environment Settings
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_DEBUG_TOOLS=true
EXPO_PUBLIC_DEBUG_SUPABASE=true

# Platform Testing (WARP.md requirement)
EXPO_PUBLIC_PLATFORM_TESTING=android
EXPO_PUBLIC_USE_PRODUCTION_DB_AS_DEV=true

# ============================================
# EXTERNAL SERVICES
# ============================================

# Sentry Error Tracking
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn
EXPO_PUBLIC_ENABLE_SENTRY=false

# PostHog Analytics
EXPO_PUBLIC_POSTHOG_KEY=your_posthog_key_here
EXPO_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
EXPO_PUBLIC_ENABLE_POSTHOG=true

# ============================================
# EMAIL CONFIGURATION
# ============================================
FROM_EMAIL=noreply@edudashpro.org.za
EXPO_PUBLIC_FROM_EMAIL=noreply@edudashpro.org.za
EXPO_PUBLIC_EMAIL_ENABLED=true
EXPO_PUBLIC_EMAIL_MOCK_MODE=false

# ============================================
# AI FEATURES
# ============================================
EXPO_PUBLIC_AI_ENABLED=true
EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_AI_LESSON_GENERATION_ENABLED=true
EXPO_PUBLIC_AI_HOMEWORK_GRADING_ENABLED=true
EXPO_PUBLIC_AI_HOMEWORK_HELP_ENABLED=true
EXPO_PUBLIC_AI_STEM_ACTIVITIES_ENABLED=true
EXPO_PUBLIC_AI_PROGRESS_ANALYSIS_ENABLED=true
EXPO_PUBLIC_AI_INSIGHTS_ENABLED=true
EXPO_PUBLIC_AI_CONTENT_MODERATION_ENABLED=true
EXPO_PUBLIC_AI_STREAMING_ENABLED=true

# Hybrid Transcription System (Batch + ASR for real-time feel)
EXPO_PUBLIC_ENABLE_HYBRID_TRANSCRIPTION=true
EXPO_PUBLIC_ENABLE_ON_DEVICE_ASR=true
EXPO_PUBLIC_ENABLE_CHUNKED_TRANSCRIPTION=true
EXPO_PUBLIC_CHUNK_DURATION_MS=1000

# Voice recording modal style: 'modern' (WhatsApp-style) or 'sheet'
EXPO_PUBLIC_VOICE_MODAL_STYLE=modern

# Realtime voice streaming (WebSocket/WebRTC) - LEGACY/OPTIONAL
# Set to true to enable streaming transcription UX
EXPO_PUBLIC_DASH_STREAMING=false
# Optional: Override WS URL (otherwise fetched from Edge Function)
# Example (OpenAI Realtime WS): wss://api.openai.com/v1/realtime?model=gpt-4o-realtime-preview
EXPO_PUBLIC_DASH_STREAM_URL=
EXPO_PUBLIC_ENABLE_WEBRTC_STREAMING=false

# AI Agentic Capabilities (Advanced Features)
EXPO_PUBLIC_AGENTIC_ENABLED=false
EXPO_PUBLIC_AGENTIC_AUTONOMY=assistant
EXPO_PUBLIC_AGENTIC_PREDICTIVE=false
EXPO_PUBLIC_AGENTIC_SEMANTIC_MEMORY=false

# AI Model Configuration
EXPO_PUBLIC_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
EXPO_PUBLIC_ANTHROPIC_MAX_TOKENS=8192

# ============================================
# ADMOB ADVERTISING CONFIGURATION
# ============================================

# AdMob Configuration (WARP.md requirement: test IDs in development)
EXPO_PUBLIC_ADMOB_ANDROID_APP_ID=ca-app-pub-your-id~your-app-id
EXPO_PUBLIC_ADMOB_IOS_APP_ID=ca-app-pub-your-id~your-app-id
EXPO_PUBLIC_ENABLE_FREE_TIER_ADS=true
EXPO_PUBLIC_ADMOB_TEST_IDS_ONLY=true
EXPO_PUBLIC_ENABLE_ADS=true

# AdMob Ad Unit IDs (Test IDs for development)
EXPO_PUBLIC_ADMOB_ADUNIT_BANNER_PARENT_DASHBOARD=ca-app-pub-3940256099942544/6300978111
EXPO_PUBLIC_ADMOB_ADUNIT_NATIVE_PARENT_FEED=ca-app-pub-3940256099942544/2247696110
EXPO_PUBLIC_ADMOB_ADUNIT_INTERSTITIAL_PARENT_NAV=ca-app-pub-3940256099942544/1033173712
EXPO_PUBLIC_ADMOB_ADUNIT_REWARDED_PARENT_PERK=ca-app-pub-3940256099942544/5224354917

# Legacy variable names (keeping for compatibility)
EXPO_PUBLIC_ADMOB_ANDROID_BANNER_UNIT_ID=ca-app-pub-3940256099942544/6300978111
EXPO_PUBLIC_ADMOB_ANDROID_INTERSTITIAL_UNIT_ID=ca-app-pub-3940256099942544/1033173712
EXPO_PUBLIC_ADMOB_ANDROID_REWARDED_UNIT_ID=ca-app-pub-3940256099942544/5224354917

# ============================================
# REVENUECAT SDK KEYS
# ============================================
EXPO_PUBLIC_REVENUECAT_ANDROID_SDK_KEY=your_android_key_here
EXPO_PUBLIC_REVENUECAT_IOS_SDK_KEY=your_ios_key_here

# ============================================
# PAYMENT INTEGRATION
# ============================================
EXPO_PUBLIC_WEBHOOK_PAYPAL_FN=webhooks-paypal
EXPO_PUBLIC_WEBHOOK_PAYFAST_FN=webhooks-payfast
EXPO_PUBLIC_PAYMENTS_BRIDGE_URL=https://your-bridge-domain.com/payments

# ============================================
# APP CONFIGURATION
# ============================================
EXPO_PUBLIC_APP_SCHEME=edudashpro
EXPO_PUBLIC_WEB_URL=http://localhost:8081
EXPO_PUBLIC_APP_NAME=EduDash Pro
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_DEFAULT_CURRENCY=ZAR
EXPO_PUBLIC_DEFAULT_LOCALE=en-ZA
EXPO_PUBLIC_DEFAULT_TIMEZONE=Africa/Johannesburg

# Storage
EXPO_PUBLIC_SUPABASE_STORAGE_BUCKET=test-bucket

# ============================================
# FEATURE FLAGS
# ============================================
EXPO_PUBLIC_ENABLE_STEM_ACTIVITIES=true
EXPO_PUBLIC_ENABLE_HOMEWORK_GRADING=true
EXPO_PUBLIC_ENABLE_LESSON_GENERATOR=true
EXPO_PUBLIC_ENABLE_PROGRESS_ANALYSIS=true
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_TEST_TOOLS=true

# ============================================
# DEVELOPMENT ONLY (Not for production)
# ============================================
NODE_BINARY=node

